<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/relative_layout_adapter_media_padding"
    android:descendantFocusability="blocksDescendants"
    android:fillViewport="true">

    <ImageView
        android:id="@+id/posterImageImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/canonicalTitleTextView"
        android:layout_alignBottom="@+id/posterImageImageView"
        android:layout_alignStart="@+id/posterImageImageView"
        android:layout_alignEnd="@+id/posterImageImageView"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/text_view_adapter_media_padding_left"
        android:paddingRight="@dimen/text_view_adapter_media_padding_right"
        style="@style/imageFooterTextView"/>

</RelativeLayout>
