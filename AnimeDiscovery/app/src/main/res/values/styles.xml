<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- TextView Dialogo -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textColor</item>
    </style>

    <!-- TextView estilo Tablayout -->
    <style name="tabLayoutTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical|center</item>
        <item name="android:drawablePadding">7dp</item>
    </style>

    <!-- TextView estilo Tablayout -->
    <style name="imageFooterTextView">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/background_footer</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- TextView estilo Tablayout -->
    <style name="youtubeButton">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@android:color/holo_red_dark</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableLeft">@drawable/ic_youtube</item>
    </style>

    <style name="generalActivity">
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="genreTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>


    <!-- TextView estilo description -->
    <style name="generalDescriptionTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- TextView estilo description -->
    <style name="generalTitleTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:drawablePadding">10dp</item>

    </style>

    <style name="searchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="queryBackground">@android:color/white</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorHint">@color/textColor</item>
    </style>

    <style name="waitTextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="generalButton">
        <item name="android:background">@color/backgroundButton</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
